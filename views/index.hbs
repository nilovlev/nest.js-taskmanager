<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>App</title>
  </head>
  <body>
    <h1>Counter: {{ counter }}</h1>
    <ol class="task_list">
      {{#each tasks}}
        <li>
          <form method="POST" action="/">
            <input type="text" name="task" value="{{this}}">
            <input type="submit" name="{{@index}}" value="Удалить">
          </form>
        </li>
      {{else}}
        <li>Список дел пуст</li>
      {{/each}}
    </ol>
    <form method="POST" action="/">
        <input type="text", name="input_task">
        <input type="submit", value="Добавить">
    </form>
  </body>
</html>
