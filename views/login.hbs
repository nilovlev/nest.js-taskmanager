<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>App</title>
  </head>
  <body>
    {{#if loginStatus}}
        <form method="POST" action="/logout">
            <h1>User: {{userName}}</h1>
            <input type="submit" name="logout_button" value="Logout">
        </form>
        {{> taskmanager }}
    {{else}}
        <h1>Login</h1>
        <form method="POST" action="/login">
            <input type="text" name="login_field">
            <input type="submit" name="login_button" value="Login">
        </form>
    {{/if}}
  </body>
</html>
