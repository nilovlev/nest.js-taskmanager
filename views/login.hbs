<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Login</title>
    </head>
    <body>
        {{#if logged_in}}
            <h2>Logged in as {{username}}</h2>
            
            <h1>Список дел</h1>
            <ol class="task_list">
            {{#each tasks}}
                <li>
                <form method="POST" action="/user/delete_task">
                    {{!-- <input type="checkbox" name="is_done" value="{{this.done}}"> --}}
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="text" name="text" value="{{this.text}}">
                    <input type="submit" name="submit_button" value="Удалить">
                </form>
                </li>
            {{else}}
                <div>Список дел пуст</div>
            {{/each}}
            </l>
            <form method="POST" action="/user/add_task">
                <input type="text", name="input_task">
                <input type="submit", value="Добавить">
            </form>

            <form action="/user/logout" method="POST">
                <input type="submit" name="logout_button" value="Выйти">
            </form>
        {{else}}
            <h2>Not logged in.</h2>
            <h2>Login:</h2>
            <form action="/user/login" method="POST">
                Login: <input type="text" name="login_username">
                Password: <input type="password" name="login_password">
                <input type="submit">
            </form>
            <h2>Register</h2>
            <form action="/user/register" method="POST">
                Login: <input type="text" name="register_username">
                Password: <input type="password" name="register_password">
                <input type="submit">
            </form>
        {{/if}}
    </body>
</html>
